<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.calculatorfxml.controller.CalculatorController" spacing="10" alignment="center">
    <TextField fx:id="display" editable="false" style="-fx-font-size: 24px; -fx-padding: 10px;" />

    <GridPane hgap="10" vgap="10" alignment="center">
        <Button text="7" onAction="#processNumpad" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="8" onAction="#processNumpad" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="9" onAction="#processNumpad" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="/" onAction="#processOperator" GridPane.rowIndex="0" GridPane.columnIndex="3" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>

        <Button text="4" onAction="#processNumpad" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="5" onAction="#processNumpad" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="6" onAction="#processNumpad" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="*" onAction="#processOperator" GridPane.rowIndex="1" GridPane.columnIndex="3" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>

        <Button text="1" onAction="#processNumpad" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="2" onAction="#processNumpad" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="3" onAction="#processNumpad" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="-" onAction="#processOperator" GridPane.rowIndex="2" GridPane.columnIndex="3" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>

        <Button text="0" onAction="#processNumpad" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="." onAction="#processNumpad" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="=" onAction="#processEquals" GridPane.rowIndex="3" GridPane.columnIndex="2" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
        <Button text="+" onAction="#processOperator" GridPane.rowIndex="3" GridPane.columnIndex="3" style="-fx-font-size: 18px; -fx-pref-width: 60px; -fx-pref-height: 60px;"/>
    </GridPane>
</VBox>
